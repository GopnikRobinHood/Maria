<div>
    <label>Model</label>
    <input type="text" name="model" value="<%= car.model %>">
</div>

<div>
    <label>Company</label>

    <select name="company">
        <% companies.forEach(company => { %>
          <% if (company.id === car.company) { %>
            <option selected label="<%= company.name %>" value="<%= company.id %>">
          <% } else { %>
            <option label="<%= company.name %>" value="<%= company.id %>">
          <% } %>
        <% }) %>
        </select>

</div>

<div>
    <label>Release date</label>
    <input type="date" name="releaseDate" 
    value="<%= car.releaseDate == null ? '' : car.releaseDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label>PS</label>
    <input type="number" name="PS" value="<%= car.PS %>" min="0">
</div>

<div>
    <label>Image</label>
    <input type="file" name="image">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= car.description %></textarea>
</div>